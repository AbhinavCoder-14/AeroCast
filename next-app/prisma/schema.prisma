generator client {
  provider = "prisma-client-js"
  // Remove the custom output path - use default
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Jobs {
  jobId  String @id @default(uuid())
  city   String @map("city")
  
  status String @default("PENDING") @map("status")
  result_data String? @map("result_data")
  createdAt DateTime @default(now()) @map("createdAt")
  expiresAt DateTime? @map("expiresAt")
  completedAt DateTime? @map("completedAt")// Add this field

  @@index([status,createdAt,expiresAt]) // // Efficiently finds pending jobs, sorted by creation time
  @@map("jobs")
} 


